// Typography - everything font-related

html,
body
  -webkit-text-size-adjust none
  text-size-adjust none
  color: $colors.text
  font-family 'Lato', sans-serif
  font-size 16px
  line-height 1.6

p
  line-height 1.55

code
  font-family Consolas, monaco, monospace

a,
.a
  color: $colors.blue
  transition all .2s ease
  &:hover
      color: lighten($colors.blue, 20%)

h1,
.h1
  font-size 2.25rem
h2,
.h2
  font-size 1.75rem
h3,
.h3
  font-size 1.5rem
h4,
.h4
  font-size 1.25rem
h5,
.h5
  font-size 1rem
h6,
.h6
  font-size .8rem

h1,
h2,
h3,
h4,
h5,
h6,
.h1,
.h2,
.h3,
.h4,
.h5,
.h6
  margin 2rem 0

p,
.p
  margin 1rem 0 .5rem

.t-left
  text-align left
.t-center
  text-align center
.t-right
  text-align right

.f-left
  float left
.f-right
  float right

.is-bold
  font-weight bold
.is-italic
  font-style italic

.t-confirm
  color: $colors.green
.t-info
  color: $colors.blue
.t-warning
  color: $colors.orange
.t-error
  color: $colors.red
.t-muted
  color: $colors.grey
