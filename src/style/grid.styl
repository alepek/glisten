// Super simple grid system inspired by https://gist.github.com/JeffreyWay/1481756
// Extends to full width of parent container and collapses under 520px.

$full-width = 100
$columns = 12
$gutter = 1

.container
  width unit($full-width, '%')
  margin auto
  overflow hidden

div[class^="c-"]
  display inline
  float left
  margin-left unit($gutter, '%')
  margin-right unit($gutter, '%')

for col in 1..$columns
  .c-{col}
    width unit((col / $columns - $gutter / 100 * 2) * 100, '%')

@media screen and (max-width: 520px)
  div[class^="c-"]
    float none
    display block
    width 100%
    margin 0
