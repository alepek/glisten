$max-width = 920px

.nav
  height 70px
  font-size 1.2rem
  box-shadow: 0 1px 2px 0 rgba(63, 58, 63, .5)
  background: $colors.brown
  color: $colors.orange

  .nav-container
    max-width: $max-width
    margin 0 auto

  p,
  span,
  li,
  ul,
  a
    text-decoration none
    color: $colors.orange

  a:hover
    color: lighten($colors.orange, 20%)

  .logo,
  .items
    display inline-block

  .logo
    display flex
    align-items center
    float left
    height 70px
    margin 0 1rem

  .items
    float right

  .item
    position relative
    display flex
    align-items center
    float left
    height 40px
    padding 0
    margin 1rem
    text-transform uppercase

    &:before,
    &:after
      border-bottom: 2px solid lighten($colors.orange, 20%)
      content " "
      transition all .2s ease
      position absolute
      bottom 0
      opacity 0

    &:before
      right 50%
      width 20%

    &:after
      left 50%
      width 20%

    &:hover
      &:before,
      &:after
        opacity 1
        width 50%
        width 50%
