@import colors

$border-color = lighten($colors.grey, 75%)

body
  margin 0
  padding 0 0 2rem

section
  margin 0 auto
  padding 0 1rem

  .section-heading
    margin 0 auto
    text-align center
    margin 2rem 2rem 3rem

  .sub-heading
    border-bottom: 1px solid $border-color

  .section-intro
    margin 3rem
    text-align center

    > *
      margin 1rem 2rem

.text-and-code
  span,
  code
    &:first-child
      margin-left 0
    &:last-child
      margin-right 0
    margin 0 .25em

code
  background #ececec
  padding 2px 4px
  border-radius 2px
  white-space nowrap

