// Colors

.color-container
  .color
    margin 0 auto 2rem
    height 8rem
    width 8rem
    border-radius 4rem
    position relative

  .color-desc
    text-transform uppercase
    width 100%
    text-align center
    color white
    position absolute
    bottom 1rem
    text-shadow 0px 1px 1px #555555
