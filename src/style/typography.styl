// Typography - everything font-related

html,
body
  color: $colors.text
  font-family 'Lato', sans-serif
  font-size 16px
  line-height 1.6

p
  line-height 1.55

a
  color: $colors.blue
  transition: all .2s ease
  &:hover
      color: lighten($colors.blue, 20%)

h1
  font-size 2.25rem
h2
  font-size 1.75rem
h3
  font-size 1.5rem
h4
  font-size 1.25rem
h5
  font-size 1rem
h6
  font-size .8rem
